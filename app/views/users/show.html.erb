<center>

<div>
  <%= attachment_image_tag @user, :icon, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
</div>

<table>
  <tbody>
    <tr>
      <td>名前</td>
      <td><%= @user.name %></td>
    </tr>
    
    <tr>
      <td>自己紹介</td>
      <td><%= @user.body %></td>
    </tr>
  </tbody>
</table>

<div>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

</center>