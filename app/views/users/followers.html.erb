<div class="mx-sm-2 mx-md-3 mx-lg-5 pt-5 pb-5">
  <section>
    
    <header class="text-center">
      <h3>FOLLOWERS</h3>
    </header>
    
    <% @users.each do |user| %>
      <div class="d-flex flex-column bd-highlight mb-3 text-center">
        <%= link_to user_path(user) do %>
          
          <%= attachment_image_tag user, :icon, size: '30x30', fallback: "no_image.jpg", class: "border border-dark rounded-circle" %>
          
          <%= user.name %>
          
        <% end %>
      </div>
    <% end %>
    
  </section>
</div>