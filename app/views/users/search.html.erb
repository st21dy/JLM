<div class="mx-sm-2 mx-md-3 mx-lg-5 mb-3 pt-5 pb-5">
  <section>
    
    <div class="text-center">
      <%= form_with url: search_users_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword, placeholder: "User Name" %>
        
        <%= f.submit "検索" %>
      <% end %>
    </div>
    
    <div class="mt-3">
      <div class="d-flex flex-column bd-highlight mb-3 text-center">
        <% if @keyword == nil %>
        
        <% elsif %>
          <% @users.each do |user| %>
            <%= link_to user_path(user.id) do %>
          
              <%= attachment_image_tag user, :icon, size: '30x30', fallback: "no_image.jpg", size:'30x30', class: "border border-dark rounded-circle" %>
          
              <%= user.name %>
          
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    
  </section>
</div>
