<center>

<h1>JLM</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  
  <br>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<h6>
  アカウントをお持ちでないですか？
  <%= link_to "登録する", new_registration_path(resource_name) %>
</h6>

</center>