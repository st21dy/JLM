<div class="mx-sm-2 mx-md-3 mx-lg-5 pt-5 pb-5">
  <div class="text-center px-2">
    <h3>JLM</h3>

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="m-2">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>

    <h6>
      アカウントをお持ちでないですか？
      <%= link_to "登録する", new_registration_path(resource_name) %>
    </h6>

  </div>
</div>